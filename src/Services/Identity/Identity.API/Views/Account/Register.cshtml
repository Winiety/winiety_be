@model Identity.API.ViewModels.RegisterViewModel


@{
    ViewData["Title"] = "Register";
}
<div class="container account-register-container">
    <div class="row">
        <div class="col-md-12">
            <section>
                <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <h4>CREATE NEW ACCOUNT</h4>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label form-label"></label>
                        <input asp-for="FirstName" class="form-control form-input form-input-center" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label form-label"></label>
                        <input asp-for="LastName" class="form-control form-input form-input-center" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label form-label"></label>
                        <input asp-for="Email" class="form-control form-input form-input-center" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label form-label"></label>
                        <input asp-for="Password" class="form-control form-input form-input-center" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control form-input form-input-center" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-danger">@Html.ValidationSummary(true)</div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default btn-brand btn-brand-big">Register</button>
                    </div>
                    <p>
                        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text">Already have an account?</a>
                    </p>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
